{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    }
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}